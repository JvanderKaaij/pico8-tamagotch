pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
c={0,1,2,8,14,15,7}

fillp(0xa5a5)

function f(i)
	return c[flr(1.5+abs(6-i%12))]
end

function _draw()
	cls()
	for w=3,64,0.1 do
		a=4/w+t()/4
		k=145/w
		x=64+k*cos(a)
		y=64+k*sin(a)
		
		i=35/w+2+t()*2
		
		rect(x-w,y-w,x+w,y+w,f(i)*16+f(i+0.1))
	end

end
